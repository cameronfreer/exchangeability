    intro g
    have hnorm_eq : ‚ÄñK g‚Äñ = ‚Äñg‚Äñ := by
      simp [K, koopman]
    simp [hnorm_eq]
  let S := LinearMap.eqLocus K.toLinearMap 1
  have hS_closed : IsClosed (S : Set (Lp ‚Ñù 2 Œº)) := by
    have hset : (S : Set (Lp ‚Ñù 2 Œº)) = (fun x => K x - x) ‚Åª¬π' {0} := by
      ext x
