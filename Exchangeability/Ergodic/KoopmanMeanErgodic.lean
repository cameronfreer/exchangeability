  classical
  let K : Lp ‚Ñù 2 Œº ‚ÜíL[‚Ñù] Lp ‚Ñù 2 Œº := koopman T hT
  have hnorm : ‚ÄñK‚Äñ ‚â§ (1 : ‚Ñù) := by
